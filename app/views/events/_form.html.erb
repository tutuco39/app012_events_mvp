<div class="card">
  <h1 class="card-title"><%= @event.persisted? ? "イベントを編集" : "イベントを作成" %></h1>

  <%= form_with(model: event, local: true) do |form| %>
    <% if event.errors.any? %>
      <div class="flash alert">
        <p><%= pluralize(event.errors.count, "件のエラー") %>があります。</p>
        <ul style="margin:6px 0 0 18px;">
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title, "タイトル" %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :starts_at, "開始" %>
      <%= form.datetime_local_field :starts_at %>
    </div>

    <div class="field">
      <%= form.label :ends_at, "終了" %>
      <%= form.datetime_local_field :ends_at %>
    </div>

    <div class="field">
      <%= form.label :location, "場所" %>
      <%= form.text_field :location %>
    </div>

    <div class="field">
      <%= form.label :capacity, "定員(任意)" %>
      <%= form.number_field :capacity, min: 1 %>
    </div>

    <div class="field">
      <%= form.label :description, "詳細" %>
      <%= form.text_area :description, rows: 5 %>
    </div>

    <div class="card-actions">
      <%= form.submit "保存する", class: "btn btn-primary" %>
      <%= link_to "戻る", events_path, class: "btn btn-ghost" %>
    </div>
  <% end %>
</div>
