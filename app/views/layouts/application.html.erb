<!DOCTYPE html>
<html>
  <head>
    <title>Events</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>
  <body>
    <header class="topbar">
      <div class="container">
        <div class="brand">Events</div>
        <%= link_to "新規イベント", new_event_path, class: "btn btn-primary" %>
      </div>
    </header>

    <main class="container">
      <% if notice %><div class="flash notice"><%= notice %></div><% end %>
      <% if alert %><div class="flash alert"><%= alert %></div><% end %>
      <%= yield %>
    </main>
  </body>
</html>
